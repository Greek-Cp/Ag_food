<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/green_background"
            android:orientation="vertical"

            tools:context=".Fragment.FragmentAboutUs">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AG FOOD"
                android:textColor="@color/white"
                android:fontFamily="@font/sfprodisplaybold"
                android:textSize="@dimen/_40ssp"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                />
            <!-- TODO: Update blank fragment layout -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                app:cardCornerRadius="30dp"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    >

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:fontFamily="@font/sfprodisplaybold"
                        android:text="Tentang Kami"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_25ssp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="36dp"
                        android:layout_marginRight="36dp"
                        android:fontFamily="@font/sfprodisplaybold"
                        android:gravity="center"
                        android:text="AG-FOOD adalah sebuah
layanan pemesanan makanan
online yang menyediakan berbagai jenis makanan indonesia ,fast food dan lain lain di area nganjuk."
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16ssp"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="@dimen/_65sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView7" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_90sdp"
                android:src="@drawable/ag_food_logo"
                android:layout_gravity="center"
                android:layout_marginTop="70dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AG-FOOD TEAM"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold"
                android:fontFamily="@font/sfprodisplaybold"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="140dp"
                />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</layout>
